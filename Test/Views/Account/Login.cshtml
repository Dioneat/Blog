@model Test.ViewModels.LoginViewModel
<main id="main">

    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">

                <h2>
                    <a asp-controller="Home" asp-action="Index">Главная</a>
                    / <a asp-controller="Account" asp-action="Index">Аккаунт</a>
                    / Вход
                </h2>

            </div>

        </div>
    </section>

    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">

            <div class="row">

                <div class="col-lg-12 entries">
                    <article class="entry entry-single">
                        <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                            <div class="form-group blog-settings">
                                <label asp-for="Email" class="control-label">Логин</label>
                                <input asp-for="Email" required class="form-control" />
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group blog-settings">
                                <label asp-for="Password" class="control-label">Пароль</label>
                                <input asp-for="Password" required class="form-control" />
                                <span asp-validation-for="Password"></span>
                            </div>

                            <div class="form-group blog-settings">
                                <label asp-for="RememberMe" class="control-label"></label>
                                <br />
                                <input asp-for="RememberMe" />
                            </div>
                            <div class="form-group blog-settings">
                                <button type="submit" class="btn btn-success">Войти</button>
                            </div>

                        </form>
                    </article>
                </div>
            </div>
        </div>
    </section>

</main>
