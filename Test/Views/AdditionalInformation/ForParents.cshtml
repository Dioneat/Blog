@model IEnumerable<Post>
<main id="main">
    <section class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <a asp-controller="Home" asp-action="Index">Главная</a> / <span>Дополнительная информация</span> / <span>Для родителей</span>
                </h2>
            </div>
        </div>
    </section>
    <section class="service-details">
        <div class="container">
            <div class="row">
                @foreach (var post in Model)
                {
                    <div class="col-md-6 d-flex align-items-stretch" data-aos="fade-up">
                        <div class="card">
                            <div class="card-img">
                                <a asp-controller="AdditionalInformation" asp-action="Post" asp-route-id="@post.Id"><img src="@("/img/forparents/title/" + post.Image)" alt="..."></a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title"><a asp-controller="AdditionalInformation" asp-action="Post" asp-route-id="@post.Id">@post.Title</a></h5>
                                <p class="card-text">@post.ShortDesc</p>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <form asp-controller="AdditionalInformation" asp-action="Delete" asp-route-id="@post.Id" method="post">

                                        <a class="btn btn-sm btn-primary" asp-controller="AdditionalInformation" asp-action="Edit" asp-route-id="@post.Id">Изменить</a>
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Удалить
                                        </button>

                                    </form>
                                }

                                <div class="read-more"><a asp-controller="AdditionalInformation" asp-action="Post" asp-route-id="@post.Id"><i class="bi bi-arrow-right"></i>Читать далее</a></div>
                            </div>
                        </div>
                    </div>

                }
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="col-md-6 d-flex align-items-stretch" data-aos="fade-up">
                        <div class="card">
                            <h1><a asp-controller="AdditionalInformation" asp-action="Create">Создать пост</a></h1>

                        </div>
                    </div>
                }

            </div>

        </div>
    </section>
</main>
